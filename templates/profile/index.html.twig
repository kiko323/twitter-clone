{% extends 'base.html.twig' %}
{% block addtitle %} Profile{% endblock %}


{% block body %}

<main role="main">

    <div class="jumbotron">
        <div class="container">
            <div class="mt-4">
               <h1>Hello {{ app.user.username }}, here you can see your posts</h1>
            </div>
        </div>
    </div>

    <div class="container-fluid">

      {% for post in posts %}
          <div align="center" class="alert alert-primary p-3" role="alert">
              <div class="">{{ post.postsMsg }}</div>
              <br>
              <span class="blockquote-footer">From <cite title="Source Title"> {{ post.userId.username }}</cite></span>
              <span class="float-left text-muted">   {{ time_diff(post.postsCreatedAt) }}  </span>
             <a href="profile/delete/{{ post.id }}" class="btn btn-danger delete-post float-right" data-id="{{ post.id
             }}"
                 id="delete-post" >DELETE</a>
              <br>

          </div>
      {% endfor %}

      {% if posts.haveToPaginate %}
          <div class="pagerfanta float-right">
            {{ pagerfanta(posts, 'twitter_bootstrap4') }}
          </div>

      {% endif %}

    </div>

  {% endblock %}
  {% block javascripts %}{% endblock %}
